<?xml version="1.0" encoding="utf-8"?>
<!-- http://www.dibbus.com/2011/02/gradient-buttons-for-android/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#d2b800"
       			android:endColor="#d2b800"
       			android:angle="270"/>
                
            <corners
                android:radius="15dp" />
            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            
            <margin
                android:top="30dp"
                />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#cad200"
       			android:endColor="#cad200"
       			android:angle="270"/>
                
            <corners
                android:radius="15dp" />
            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            
            <margin
                android:top="30dp"
                />
        </shape>
    </item>
    
    <item>
        <shape>

            <gradient android:startColor="#8bc34a"
       			android:endColor="#8bc34a"
       			android:angle="270"/>
                
            <corners
                android:radius="15dp" />
            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            
            <margin
                android:top="30dp"
                />
        </shape>
    </item>
</selector>